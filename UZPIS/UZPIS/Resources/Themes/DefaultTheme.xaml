<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style TargetType="{x:Type Button}">

        <Setter Property="Background" Value="#FDBD40"></Setter>
        <Setter Property="BorderBrush" Value="#000"></Setter>
        <Setter Property="MinWidth" Value="120"></Setter>
        <Setter Property="MinHeight" Value="40"></Setter>
    </Style>
    <Style TargetType="{x:Type DataGrid}">
        <Setter Property="Background" Value="#FFFFFF"></Setter>
        <Setter Property="BorderBrush" Value="#0000"></Setter>
        
    </Style>


    <Style TargetType="{x:Type Image}" x:Key="LogoImageStyle">
        <Setter Property="Source" Value="../Images/UZP logo.png">
        </Setter>
        <Setter Property="Width" Value="100"></Setter>
        <Setter Property="Height" Value="100"></Setter>
        <Setter Property="Margin" Value="10,10,0,0"></Setter>
        <Setter Property="HorizontalAlignment" Value="Left"></Setter>
        <Setter Property="VerticalAlignment" Value="Top"></Setter>
      </Style>

    <Style TargetType="{x:Type Window}" x:Key="windowStyle">
        <Setter Property="Background" Value="#FFFFFF"></Setter>
        <Setter Property="FontFamily" Value="Comic Sans MS"></Setter>
    </Style>
    
</ResourceDictionary>